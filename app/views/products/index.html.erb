<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>   
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= strip_tags(product.description) %></td>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= link_to 'Show', product , class:"w3-button w3-teal" %></td>
        <td><%= link_to 'Edit', edit_product_path(product) , class:"w3-button w3-teal" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-teal" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path , class:"w3-button w3-teal w3-margin-bottom" %>
